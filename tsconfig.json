{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react",
    "module": "CommonJS",
    "rootDir": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["render", "emails"],
  "exclude": ["node_modules"]
}
